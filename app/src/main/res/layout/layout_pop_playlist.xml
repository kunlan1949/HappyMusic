<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_pop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:clickable="true">


    <RelativeLayout
        android:id="@+id/pop_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/centerLine"
        android:background="#fff"
        android:clickable="true">

        <RelativeLayout
            android:id="@+id/titlelayout"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical|center"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="播放列表"
                android:textColor="@color/def_bar_title_color"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/list_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical|center"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/title"
                android:singleLine="true"
                android:text="000"
                android:textColor="@color/def_bar_title_color"
                android:textSize="15dp" />


            <com.zlm.hp.widget.IconfontTextView
                android:id="@+id/modeAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:text="@string/mode_all"
                android:textColor="#888"
                android:textSize="22dp"
                android:visibility="invisible" />


            <com.zlm.hp.widget.IconfontTextView
                android:id="@+id/modeRandom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/mode_random"
                android:textColor="#888"
                android:textSize="22dp" />


            <com.zlm.hp.widget.IconfontTextView
                android:id="@+id/modeSingle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/mode_single"
                android:textColor="#888"
                android:textSize="25dp" />

        </RelativeLayout>


        <View
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="0.8dip"
            android:layout_below="@+id/titlelayout"
            android:layout_centerVertical="true"
            android:background="#e5e5e5"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/line">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/curplaylist_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/poplistcancel"
                android:overScrollMode="never"></android.support.v7.widget.RecyclerView>


            <com.zlm.hp.widget.ListItemRelativeLayout
                android:id="@+id/poplistcancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/lrc_pop_item_height"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:id="@+id/cancel_line"
                    android:layout_width="wrap_content"
                    android:layout_height="0.1dip"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#e5e5e5"></View>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/cancel_line"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/title_cancel"
                    android:textColor="#000"
                    android:textSize="13dp"></TextView>
            </com.zlm.hp.widget.ListItemRelativeLayout>


        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/centerLine"
        android:layout_width="wrap_content"
        android:layout_height="0.5dip"
        android:layout_centerVertical="true"></View>
</RelativeLayout>
